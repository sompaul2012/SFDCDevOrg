<apex:page standardcontroller="Account" extensions="TestApexControllerClass">
    <apex:form >
        <apex:pageBlock title="Create Accounts" mode="edit">
            
            <apex:pageBlockSection title="My Account Detailed Section" columns="2">
                <apex:inputField value="{!account.Name}"/>
                  
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!SaveAccount}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>